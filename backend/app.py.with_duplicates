    })

@app.route('/health')
def health():
    """Health check"""
    try:
        # Testar conex√£o com BigQuery
        test_query = "SELECT 1 as test"
        user_model._execute_query(test_query)
        
        return jsonify({
            'status': 'healthy',
            'database': 'connected',
            'timestamp': Config.CLAUDE_MODEL
        }), 200
        
    except Exception as e:
        return jsonify({
            'status': 'unhealthy',
            'error': str(e)
        }), 503

