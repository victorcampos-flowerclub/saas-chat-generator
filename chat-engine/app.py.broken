# Função para tornar assíncrona
def run_async(coro):
    """Executar função assíncrona"""
    try:
        loop = asyncio.get_event_loop()
    except RuntimeError:
        loop = asyncio.new_event_loop()
        asyncio.set_event_loop(loop)
    return loop.run_until_complete(coro)

# Modificar rota send_message para usar async
@app.route('/api/chat/<chat_id>/send', methods=['POST'])
def send_message_sync(chat_id):
    """Wrapper síncrono para send_message"""
    async def async_send():
        return await send_message_async(chat_id)
    
    return run_async(async_send())

